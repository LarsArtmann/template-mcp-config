{
  "mcpServers": {
    "context7": {
      "command": "bunx",
      "args": ["-y", "@upstash/context7-mcp@latest"],
      "env": {}
    },
    "deepwiki": {
      "serverUrl": "https://mcp.deepwiki.com/sse"
    },
    "github": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": "${GITHUB_PERSONAL_ACCESS_TOKEN:-}"
      }
    },
    "filesystem": {
      "command": "bunx",
      "args": [
        "-y",
        "@modelcontextprotocol/server-filesystem",
        "${HOME}/projects",
        "${HOME}/GolandProjects",
        "${HOME}/IdeaProjects",
        "${HOME}/WebStormProjects",
        "${HOME}/Desktop",
        "/tmp"
      ],
      "env": {}
    },
    "playwright": {
      "command": "bunx",
      "args": ["-y", "@playwright/mcp"],
      "env": {}
    },
    "puppeteer": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-puppeteer"],
      "env": {}
    },
    "memory": {
      "command": "mcp-server-memory",
      "args": [],
      "env": {}
    },
    "sequential-thinking": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-sequential-thinking"],
      "env": {}
    },
    "everything": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-everything"],
      "env": {}
    },
    "kubernetes": {
      "command": "bunx",
      "args": ["-y", "mcp-server-kubernetes"],
      "env": {
        "KUBECONFIG": "${KUBECONFIG:-${HOME}/.kube/config}"
      }
    },
    "ssh": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-ssh"],
      "env": {}
    },
    "sqlite": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-sqlite"],
      "env": {}
    },
    "turso": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-turso"],
      "env": {
        "TURSO_DATABASE_URL": "${TURSO_DATABASE_URL:-}",
        "TURSO_AUTH_TOKEN": "${TURSO_AUTH_TOKEN:-}"
      }
    },
    "terraform": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-terraform"],
      "env": {}
    },
    "nixos": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-nixos"],
      "env": {}
    },
    "prometheus": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-prometheus"],
      "env": {
        "PROMETHEUS_URL": "${PROMETHEUS_URL:-http://localhost:9090}"
      }
    },
    "helm": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-helm"],
      "env": {}
    },
    "fetch": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-fetch"],
      "env": {}
    },
    "youtube-transcript": {
      "command": "bunx",
      "args": ["-y", "@modelcontextprotocol/server-youtube-transcript"],
      "env": {}
    }
  }
}