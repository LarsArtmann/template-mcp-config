{
  "name": "template-mcp-config",
  "version": "2.0.0",
  "description": "Production-ready MCP configuration template with Context7 integration and comprehensive tooling for modern development workflows",
  "license": "EUPL-1.2",
  "author": "Lars Artmann",
  "repository": {
    "type": "git",
    "url": "https://github.com/LarsArtmann/template-mcp-config.git"
  },
  "homepage": "https://github.com/LarsArtmann/template-mcp-config",
  "bugs": {
    "url": "https://github.com/LarsArtmann/template-mcp-config/issues"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "context7",
    "claude",
    "ai",
    "development-tools",
    "template",
    "configuration"
  ],
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.0.0",
  "main": ".mcp.json",
  "files": [
    ".mcp.json",
    ".env.example",
    "README.md",
    "USAGE.md",
    "LICENSE",
    "scripts/",
    "validation/",
    "schemas/"
  ],
  "scripts": {
    "install-all": "bun install",
    "test-servers": "node scripts/test-all.js",
    "validate": "node validation/validate-config.js",
    "validate:env": "node scripts/validate-env.js",
    "validate:json": "node -e \"JSON.parse(require('fs').readFileSync('.mcp.json', 'utf8')); console.log('✅ .mcp.json is valid JSON')\"",
    "validate:full": "node validation/validate-config.js --verbose",
    "validate:test": "node validation/test-validation.js",
    "typespec:compile": "tsp compile ./schemas",
    "typespec:watch": "tsp compile ./schemas --watch",
    "schema:build": "bun run typespec:compile",
    "cache:optimize": "node scripts/warm-cache.js",
    "health:check": "node scripts/test-all.js --fast",
    "perf:benchmark": "node scripts/benchmark-performance.js",
    "perf:analyze": "bun run cache:optimize && bun run health:check",
    "perf:summary": "node scripts/performance-summary.js",
    "clean": "rm -rf node_modules bun.lockb",
    "fresh-install": "bun run clean && bun install && bun run cache:optimize",
    "setup": "cp .env.example .env && bun run cache:optimize && echo '✅ Setup complete! Edit .env with your configuration, then restart your MCP client'",
    "lint": "eslint . --ext .js,.ts,.json && prettier --check .",
    "lint:fix": "eslint . --ext .js,.ts,.json --fix && prettier --write .",
    "format": "prettier --write .",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:servers": "bun run test-servers",
    "test:validation": "bun run validate:test",
    "test:all": "bun run test:servers && bun run validate:test && bun run test",
    "test:detailed": "node scripts/test-all.js --output detailed",
    "test:fast": "node scripts/test-all.js --fast",
    "test:json": "node scripts/test-all.js --output json",
    "build": "tsc && bun run schema:build",
    "dev": "bun run typespec:watch"
  },
  "dependencies": {
    "@kimtaeyoon83/mcp-server-youtube-transcript": "^0.1.1",
    "@modelcontextprotocol/server-everything": "^2025.9.25",
    "@modelcontextprotocol/server-filesystem": "^2025.8.21",
    "@modelcontextprotocol/server-github": "^2025.4.8",
    "@modelcontextprotocol/server-memory": "^2025.9.25",
    "@modelcontextprotocol/server-puppeteer": "^2025.5.12",
    "@modelcontextprotocol/server-sequential-thinking": "^2025.7.1",
    "@playwright/mcp": "^0.0.46",
    "@upstash/context7-mcp": "^1.0.26",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "fetch-mcp": "^0.0.5",
    "js-yaml": "^4.1.0",
    "mcp-server-kubernetes": "^2.9.7",
    "mcp-sqlite": "^1.0.7",
    "mcp-turso-cloud": "^0.0.11",
    "ssh-mcp": "^1.3.0",
    "terraform-mcp-server": "^0.13.0"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "typescript": "^5.9.3",
    "eslint": "^9.39.1",
    "prettier": "^3.6.2",
    "vitest": "^4.0.8",
    "@typespec/compiler": "^1.5.0",
    "@typespec/http": "^1.5.0",
    "@typespec/json-schema": "^1.5.0",
    "@typespec/openapi": "^1.5.0",
    "@typespec/openapi3": "^1.5.0",
    "@typespec/rest": "^0.75.0",
    "@typespec/versioning": "^0.75.0"
  },
  "optionalDependencies": {
    "playwright": "^1.56.1"
  },
  "bundleDependencies": false,
  "os": [
    "darwin",
    "linux",
    "win32"
  ],
  "cpu": [
    "x64",
    "arm64"
  ]
}